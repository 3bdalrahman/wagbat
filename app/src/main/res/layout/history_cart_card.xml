<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="1dp"
        app:cardCornerRadius="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="100dp">

                <ImageView
                    android:id="@+id/dish_logo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/shawrma">

                </ImageView>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/dish_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="15dp"
                    android:text="Red n hot pizza"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    >

                </TextView>



                <TextView
                    android:id="@+id/dish_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:text="0.00$"
                    android:textSize="13dp">

                </TextView>
                <TextView
                    android:id="@+id/dish_total_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="5dp"
                    android:text="0.00$"
                    android:textStyle="bold"
                    android:textSize="17dp">

                </TextView>

            </LinearLayout>
            <Button
                android:enabled="false"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_gravity="bottom"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:backgroundTint="@color/white"
                android:drawableBottom="@drawable/ic_baseline_remove">

            </Button>

            <TextView
                android:id="@+id/count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01"
                android:layout_gravity="bottom"
                android:textStyle="bold">

            </TextView>

            <Button
                android:enabled="false"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_gravity="bottom"
                android:layout_marginStart="10dp"
                android:backgroundTint="#FE724C"
                android:drawableBottom="@drawable/ic_baseline_add">
            </Button>

        </LinearLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>